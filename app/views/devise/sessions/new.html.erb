<div class="columns">
  <div class="column is-three-fifths is-offset-one-fifth">
    <div class="pb-5"></div>
    <div class="box mx-5">
      <div class="block pb-5">
        <div class="columns is-mobile is-centered pb-3">
          <p class="subtitle is-2">Log in</p>
        </div>

        <div class="columns is-mobile is-centered pb-3">
          Welcome back
        </div>

        <div class="columns is-mobile is-centered pb-3">
          Did you mean to sign up?&nbsp; <strong><%= link_to "Click here to create a new account", new_registration_path(resource_name), class: "purple-a" %></strong>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "Email", class: "label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "youremail@example.com" %>
        </div>

        <div class="field">
          <%= f.label :password, "Password", class: "label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "input", placeholder: "****************" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <div class="control">
              <label class="checkbox">
                <%= f.check_box :remember_me %>
                <strong>Remember me</strong>
              </label>
            </div>
          </div>
        <% end %>

        <div class="columns is-mobile is-centered p-6">
          <div class="field is-grouped actions">
            <div class="control">
              <%= f.submit "ðŸ‘‹ Log in", class: "button plum-button" %>
            </div>

            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "button is-light" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
